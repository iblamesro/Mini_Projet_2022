def display_map_and_char(m,d,p):
    for i in range(len(m)):
        for j in range(len(m[i])):
            if i==p['y'] and j==p['x']:
                print(p['repr'],end='')
            elif m[i][j] in d:
                print (d[m[i][j]],end='')
        print()

