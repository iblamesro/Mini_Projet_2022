def create_objects(rand,carte):
    s = set() # ensemble vide
    while len(s)< rand:
        x = random.randint(0, len(carte[0])-1) #prend un x aléatoir
        y = random.randint(0,len(carte)-1)# len(m) sort de M
        s.add((x,y)) # s va prendre toutes les positions des objects
    print(s)

